{
  "name": "johnathansewell",
  "version": "1.0.0",
  "description": "Very simple static blog served via AWS (S3 bucket)",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm-run-all --parallel build:*",
    "build:sass": "sass sass/style.scss:public/style.css",
    "build:template": "./bin/template.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:sass": "npm run build:sass -- --watch",
    "watch:template": "./bin/template.js",
    "watch-templates": "watch 'npm run build:template' ./templates",
    "watch:sync": "browser-sync start --server 'public' --files './public'",
    "dev": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathansewell/johnathansewell.git"
  },
  "devDependencies": {
    "browser-sync": "2.16.0",
    "concurrently": "2.2.0",
    "eslint": "3.7.0",
    "eslint-config-airbnb": "12.0.0",
    "mustache": "2.2.1",
    "watch": "0.19.2",
    "npm-run-all": "3.1.0"
  },
  "dependencies": {
    "shelljs": "0.7.4"
  }
}
